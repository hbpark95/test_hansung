            name="BlobStorageLogger"
            storageConnectionString="DefaultEndpointsProtocol=https;AccountName=kmstorages;AccountKey=nKHAg1nL2q8YRI0W2uTPBIyzDFhBbReEQnb7kFv/evW17e/XIZooEJ/0o2fP/cDlEySrsqk38inDuOlauXnjSQ==;EndpointSuffix=core.windows.net"
